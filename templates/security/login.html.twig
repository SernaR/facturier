{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block page %}
    <h1>Connexion</h1>
{% endblock %}

{% block body %}
    <div class="container col-sm-6 mt-3">
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="username">Utilisateur</label>
                <input placeholder="Nom d'utilisateur" require name="_username" type="text" class="form-control" id="username">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input placeholder="Mot de passe" require name="_password" type="password" class="form-control" id="password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>   
    </div>
{% endblock %}
