{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Hello</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Nom d'utilisateur" require name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" require name="_password" type="text" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>   
</div>
{% endblock %}
