{% extends '../base.html.twig' %}
{% block page %}
	<h1>Cr√©ation de devis :</h1>
{% endblock %}
{% block body %}
    <div class="row mt-3">
        <div class="container col-lg-6 col-md-12 mb-3">
            <div class="card card-default card-table">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary mt-2 btn-block">Rechercher</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="card card-default card-table shadow">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Devis</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>{{ client.nom }}</td>
                                <td>{{ client.prenom }}</td>
                                <td><a
                                    href="{{ path('creation_quotation', { 'client': client.id }) }}"><i
                                        class="fas fa-file-import"></i></a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
