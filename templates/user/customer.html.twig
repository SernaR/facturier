{% extends 'base.html.twig' %}
{% block page %}
	<h1>Clients</h1>
{% endblock %}

{% block body %}
<div class="row mt-3">
	<div class="col-lg-6 col-md-12 mb-3">
		{% if message is defined and message is not null %}
			<div class="alert alert-success mt-2 js-message" role="alert">
				{{ message }}
				<button type="button" id="js-message" class="close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endif %}
		<div class="card card-default card-table">
			<div class="card-header">
				<h2>Création</h2>
			</div>
			<div class="card-body">
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<button type="submit" class="btn btn-primary mt-2 alfSize">Créer</button>
				<a href="{{ path('customer') }}" class="btn btn-primary mt-2 alfSize">Annuler</a>
				{{ form_end(form) }}
			</div>
		</div>
		
	</div>
	<div class="col-lg-6 col-md-12 mb-3">
		<div class="card card-default card-table">
			<div class="card-header">
				<h2>Recherche</h2>
			</div>
			<div class="card-body">
				{{ form_start(form2) }}
				{{ form_widget(form2) }}
				<button type="submit" class="btn btn-primary mt-2 btn-block">Rechercher</button>
				{{ form_end(form2) }}
			</div>
		</div>

		<div class="card card-default card-table">
			<div class="card-body">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Modifier</th>
							<th>Devis</th>
						</tr>
					</thead>
					<tbody>
						{% for client in clients %}
						<tr>
							<td>{{ client.id }}</td>
							<td>{{ client.nom }}</td>
							<td>{{ client.prenom }}</td>
							<td><a
								href="{{ path('customer_edit', { 'id': client.id, 'update':true }) }}"><i
									class="fas fa-edit"></i></a></td>
							<td><a
								href="{{ path('creation_quotation', { 'client': client.id }) }}"><i
									class="fas fa-file-import"></i></a></td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/jquery.min.js') }}"></script>
	<script src="{{ asset('js/service.js') }}"></script>
{% endblock %}
