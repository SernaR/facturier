<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}facturier{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
           <div class="container">

                <a class="navbar-brand" href="{{ path('user_page') }}"><img src="{{ asset('img/logo-kip-creativ-inline.png') }}" alt="logo kip creativ"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('customer') }}"><i class="fas fa-users fa-2x {% if current_menu is defined and current_menu=='customer' %}icone-orange{% endif %}"></i><br>Clients</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('service') }}"><i class="fas fa-users-cog fa-2x {% if current_menu is defined and current_menu=='service' %}icone-orange{% endif %}"></i><br>Prestations</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('creation_getCustomer') }}"><i class="far fa-address-card fa-2x {% if current_menu is defined and current_menu=='creation' %}icone-orange{% endif %}" ></i><br>Devis</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('debit') }}"><i class="fas fa-hand-holding-usd fa-2x {% if current_menu is defined and current_menu=='debit' %}icone-orange{% endif %}" ></i><br>Avoir</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('research') }}"><i class="fas fa-search fa-2x {% if current_menu is defined and current_menu=='research' %}icone-orange{% endif %}"></i><br/>Recherche</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt fa-2x"></i><br>d√©connexion</a>
                        </li>
                    {% endif %}
                </ul>
                </div>
            </div>
        </nav>

        <div class="card-header">
            <div class="container text-center">
                {% block page %}
                  <h1>Bienvenue</h1>
                {% endblock %}
            </div>
        </div>

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
